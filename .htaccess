# Canonical: force non-www on HTTPS
RewriteCond %{HTTP_HOST} ^www\.evilgeniuscreative\.com$ [NC]
RewriteRule ^ https://evilgeniuscreative.com%{REQUEST_URI} [R=301,L]

RewriteBase /

# React Router / SPA fallback (evilgeniuscreative.com only)
RewriteRule ^index\.html$ - [L]
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

RewriteCond %{HTTP_HOST} ^(www\.)?evilgeniuscreative\.com$ [NC]
RewriteRule . /index.html [L]

